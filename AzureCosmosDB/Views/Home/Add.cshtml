<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<link href="//fonts.googleapis.com/css?family=Montserrat:400,500,600&amp;subset=latin-ext" rel="stylesheet" />
	<link href="~/css/cosmos.css" rel="stylesheet" />
	<title>Add person</title>
</head>
<body>

	<div class="wrapper">
		<h1>Add record</h1>

		<form method="post" action="@Url.Content("/home/addperson")" name="add" id="add">
			<ul class="clearfix">
				<li class="half">
					<label>Name</label>
					<input type="text" name="first" id="first" placeholder="First name" data-required="true" data-error="First name is required" />
				</li>
				<li class="half">
					<label>Last name</label>
					<input type="text" name="last" id="last" placeholder="Last name" data-required="true" data-error="Last name is required" />
				</li>
				<li class="half">
					<label>Email address</label>
					<input type="text" name="email" id="email" placeholder="Email address" data-required="true" data-error="Email address is required" />
				</li>
				<li class="half">
					<label>Phone number</label>
					<input type="text" name="phone" id="phone" placeholder="Phone number" data-required="true" data-error="Phone number is required" />
				</li>
				<li>
					<label>Gender</label>
					<select name="gender" id="gender" data-required="true" data-error="Gender is required">
						<option value="male">Male</option>
						<option value="female">Female</option>
						<option value="notspecified">Not specified</option>
					</select>
				</li>
				<li class="half">
					<label>Address</label>
					<input type="text" name="address" id="address" placeholder="Address" data-required="true" data-error="Address is required" />
				</li>
				<li class="half">
					<label>Post code</label>
					<input type="text" name="postcode" id="postcode" placeholder="Post code" data-required="true" data-error="Post code is required" />
				</li>
				<li class="half">
					<label>City</label>
					<select name="city" id="city" data-required="true" data-error="City is required">
						<option value="Istanbul">Istanbul</option>
						<option value="Ankara">Ankara</option>
						<option value="Izmir">Izmir</option>
						<option value="London">Londra</option>
					</select>
				</li>
				<li class="half">
					<label>Country</label>
					<select name="country" id="country" data-required="true" data-error="Country is required">
						<option value="Turkey">Türkiye</option>
						<option value="UK">United Kingdom</option>
						<option value="USA">United States Of America</option>
					</select>
				</li>
				<li class="half">
					<label>Username</label>
					<input type="text" name="username" id="username" placeholder="User name" data-required="true" data-error="User name is required" />
				</li>
				<li class="half">
					<label>Password</label>
					<input type="password" name="password" id="password" placeholder="Password" data-required="true" data-error="Password is required" />
				</li>
				<li>
					<label>Localization</label>
					<select name="localization" id="localization" data-required="true" data-error="Localization is required">
						<option value="tr-TR">TR</option>
						<option value="en-GB">EN</option>
					</select>
				</li>
				<li>
					<button type="submit" name="submitform" id="submitform">ADD</button>
				</li>
			</ul>
		</form>

		<p class="centered">
			<a href="javascript:history.back();">Go back</a>
		</p>
	</div>

	<script src="//ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>
		$(function () {
			$("#add").submit(function (e) {
				e.preventDefault();

				var count = 0;
				var errorMessage = '';

				$('input[data-required="true"]').each(function () {
					errorMessage = $(this).attr("data-error");

					$(this).parent().find("span").remove();

					if ($.trim($(this).val()) === "") {
						count++;
						$(this).addClass("error");
						$(this).parent().find("span").remove();
						$(this).parent().append('<span class="error-message">' + errorMessage + '</span>');
					}
					else {
						$(this).removeClass("error");
					}
				});

				if (count == 0) {
					document.forms[0].submit();
				}
			});
		});
	</script>
</body>
</html>